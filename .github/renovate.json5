{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':gitSignOff',
  ],
  postUpdateOptions: [
    'gomodTidy',
  ],
  packageRules: [
    {
      matchManagers: [
        'gomod',
      ],
      groupName: 'golang.org/x packages',
      groupSlug: 'golang-x',
      matchDepNames: [
        '/^golang\\.org\\/x\\//',
      ],
    },
    {
      matchManagers: [
        'gomod',
      ],
      groupName: 'google.golang.org/genproto packages',
      groupSlug: 'google-genproto',
      matchDepNames: [
        '/^google\\.golang\\.org\\/genproto(\\/|$)/',
      ],
      schedule: [
        'every month',
      ],
    },
    {
      matchManagers: [
        'gomod',
      ],
      matchFileNames: [
        'api/go.mod',
        'client/go.mod',
      ],
      enabled: false,
    },
  ],
  ignoreDeps: [
    'github.com/Graylog2/go-gelf',
  ],
}
